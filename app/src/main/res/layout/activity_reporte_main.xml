<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ReporteMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtReporteFechaDesde"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Fecha Desde"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/edtReporteFechaDesde"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:inputType="date"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtReporteFechaHasta"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Fecha Hasta"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/edtReporteFechaHasta"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGetReporteList"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#32CD32"
                android:text="Get Reporte"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnVolverRepdMain"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#2196F3"
                android:text="Volver"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

</LinearLayout>
