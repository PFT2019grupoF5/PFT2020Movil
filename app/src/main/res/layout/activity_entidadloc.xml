<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntidadLocActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtEntidadLocId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/edtEntidadLocId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/txtEntidadLocCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/edtEntidadLocCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/txtEntidadLocNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/edtEntidadLocNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtEntidadLocDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/edtEntidadLocDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtEntidadLocTipoLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Loc"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/edtEntidadLocTipoLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtEntidadLocCiudadId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad Id"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/edtEntidadLocCiudadId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="#32CD32"
            android:textColor="#ffffff"
            android:layout_marginBottom="2dp"
            />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="#FF0000"
            android:textColor="#ffffff"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>