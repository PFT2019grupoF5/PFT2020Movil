<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewU01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtUsuarioId"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="ID"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        />

                    <EditText
                        android:id="@+id/edtUsuarioId"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />
                </LinearLayout>

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewU02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtUsuarioNombre"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Nombre"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/edtUsuarioNombre"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Máximo 50 caractares"
                        android:textSize="10dp"
                        />
                  </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewU03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtUsuarioApellido"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Apellido"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/edtUsuarioApellido"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Máximo 50 caractares"
                        android:textSize="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewU04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtUsuarioNomAcceso"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="NomAcceso"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/edtUsuarioNomAcceso"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="Máximo 50 caractares"
                        android:textSize="10dp"
                        />
                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewU05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtUsuarioContrasena"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Contrasena"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:id="@+id/edtUsuarioContrasena"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Alfanumérico min 8 maximo 16 caracteres"
                        android:textSize="10dp"
                        />
                 </LinearLayout>

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewU06"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtUsuarioCorreo"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Correo"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/edtUsuarioCorreo"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Máximo 50 caractares"
                        android:textSize="10dp"
                        />
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewU07"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtUsuarioTipoPerfil"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Tipo Perfil"
                        android:textSize="10dp"
                        />

                    <EditText
                        android:id="@+id/edtUsuarioTipoPerfil"
                        android:textSize="9dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        />

                    <Spinner
                        android:id="@+id/spinnerTipoPerfil"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:entries="@array/tipoperfil_array"
                        android:prompt="@string/tipoperfil_prompt"
                        android:textSize="20dp"/>
              </LinearLayout>

                <TextView
                    android:id="@+id/txtMoviCamposRequeridos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="* indica campo mandatorio"
                    android:textAlignment="center"
                    android:textColor="#E91E63"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="#32CD32"
                        android:text="Save"
                        android:textColor="#ffffff"
                        />

                    <Button
                        android:id="@+id/btnDel"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="#FF0000"
                        android:text="Delete"
                        android:textColor="#ffffff"
                        />
                <Button
                    android:id="@+id/btnVolverUsu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:text="Volver"
                    android:textColor="#ffffff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>

