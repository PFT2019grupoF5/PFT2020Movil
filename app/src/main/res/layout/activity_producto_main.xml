<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnAddProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Producto"
            android:background="#BA55D3"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/btnGetProductosList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Productos"
            android:background="#32CD32"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:id="@+id/btVolverProdMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:background="#2196F3"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            />

        <ListView
            android:id="@+id/listViewProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>